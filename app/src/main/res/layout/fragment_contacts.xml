<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ha_cf_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="white"
    tools:context=".View.Home.ContactsFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/text_input"

        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/ha_cf_iv"
            android:layout_width="13dp"
            android:layout_height="41dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/ha_cf_et"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/grey1"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/ha_cf_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_ionic_ios_add_circle_outline"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ha_cf_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>